@model ShopTARgv24.Models.Kindergartens.KindergartenCreateUpdateViewModel

<div class="container mt-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header @(Model.Id.HasValue ? "bg-primary" : "bg-success") text-white text-center">
                <h1>@(Model.Id.HasValue ? "Update" : "Create")</h1>
            </div>

            <div class="card-body p-4">
                <form method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />
                    <input asp-for="UpdatedAt" type="hidden" />

                    <div class="form-group row m-3">
                        <label asp-for="GroupName" class="col-sm-3 col-form-label">Group name</label>
                        <div class="col-sm-9">
                            <input asp-for="GroupName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="ChildrenCount" class="col-sm-3 col-form-label">Children count</label>
                        <div class="col-sm-9">
                            <input asp-for="ChildrenCount" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="KindergartenName" class="col-sm-3 col-form-label">Kindergarten name</label>
                        <div class="col-sm-9">
                            <input asp-for="KindergartenName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="TeacherName" class="col-sm-3 col-form-label">Teacher name</label>
                        <div class="col-sm-9">
                            <input asp-for="TeacherName" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="Files" class="col-sm-3 col-form-label">Images</label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="Files" multiple type="file" />
                        </div>
                    </div>

                    <div class="m-3">
                        @if (Model.Image != null && Model.Image.Length > 0)
                        {
                            foreach (var images in Model.Image)
                            {
                                <div class="d-flex align-items-center mb-3">
                                    <partial name="_Images" model="images" />

                                    <!-- отдельная мини-форма для удаления одной картинки -->
                                    <form asp-action="RemoveImage" asp-controller="Kindergartens" method="post" class="ms-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="ImageId" value="@images.ImageId" />
                                        <input type="hidden" name="KindergartenId" value="@images.KindergartenId" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            }
                        }
                    </div>

                    @if (Model.Id.HasValue)
                    {
                        <button asp-action="Update" asp-controller="Kindergartens" type="submit" class="btn btn-success m-2">Update</button>
                    }
                    else
                    {
                        <button asp-action="Create" asp-controller="Kindergartens" type="submit" class="btn btn-success m-2">Create</button>
                    }

                    <a asp-action="Index" asp-controller="Kindergartens" class="btn btn-secondary m-2">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
